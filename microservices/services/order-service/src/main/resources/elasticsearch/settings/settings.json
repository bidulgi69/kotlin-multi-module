{
  "index": {
    "max_ngram_diff": "5",
    "analysis": {
      "analyzer": {
        "n_gram_analyzer": {
          "tokenizer": "text_tokenizer",
          "filter": [
            "lowercase"
          ]
        }
      },
      "tokenizer": {
        "text_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 7,
          "token_chars": [
            "letter",
            "digit",
            "symbol",
            "punctuation"
          ]
        }
      }
    }
  }
}
